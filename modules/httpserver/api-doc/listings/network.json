               "type":"string"
            },
            "broadcast":{
               "type":"string"
            },
            "flags":{
               "type":"string"
            },
            "mtu":{
               "type":"string"
            },
            "phys_addr":{
               "type":"string"
            }
         }
      },
      "wakeup_stats":{
         "id": "wakeup_stats",
         "properties":{
